<h1>Listing merchants</h1>

<table id="merchant-table">
  <tr class="table-top">
    <td>Bank</td>
    <td>Merchant</td>
    <td colspan="3">Manage</td>
  </tr>

<% @merchants.each do |merchant| %>
  <tr>
    <td><%=h merchant.bank.to_s %></td>
    <td><%=h merchant.name %></td>
    <td><%= link_to 'Show', merchant %></td>
    <td><%= link_to 'Edit', edit_merchant_path(merchant) %></td>
    <td><%= link_to 'Delete', merchant, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New merchant', new_merchant_path %>